<conf:WPFUIEditor x:Class="WriteMPlcPackage.WriteMPlcUIEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:conf="clr-namespace:Matrox.DesignAssistant.UI.Configuration;assembly=Matrox.DesignAssistant.UI"
             xmlns:input="clr-namespace:Matrox.DesignAssistant.UI.Input;assembly=Matrox.DesignAssistant.UI"               
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="0" Text="IP Address"/>
        <input:ModernInputBox Grid.Row="0" Grid.Column="1" Expression="{Binding Expressions[IpAddress]}"/>

        <TextBlock Grid.Row="1" Grid.Column="0" Text="Port"/>
        <input:ModernInputBox Grid.Row="1" Grid.Column="1" Expression="{Binding Expressions[Port]}"/>

        <TextBlock Grid.Row="2" Grid.Column="0" Text="Head Device"/>
        <input:ModernInputBox Grid.Row="2" Grid.Column="1" Expression="{Binding Expressions[HeadDevice]}"/>

        <TextBlock Grid.Row="3" Grid.Column="0" Text="Input Value"/>
        <input:ModernInputBox Grid.Row="3" Grid.Column="1" Expression="{Binding Expressions[InValue]}"/>

    </Grid>
</conf:WPFUIEditor>
