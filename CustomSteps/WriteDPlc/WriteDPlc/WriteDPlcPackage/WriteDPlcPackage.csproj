<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<Version>1.0.0.0</Version>
		<Description>This is a WriteDPlc step.</Description>
		<TargetFramework>net60</TargetFramework>
		<RootNamespace>WriteDPlcPackage</RootNamespace>
		<AssemblyName>WriteDPlcPackage</AssemblyName>
		<OutputPath>..\assets\</OutputPath>
		<CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
		<ProduceReferenceAssembly>false</ProduceReferenceAssembly>
		<AppendTargetFrameworkToOutputPath>False</AppendTargetFrameworkToOutputPath>
	</PropertyGroup>
	<ItemGroup>
		<PackageReference Include="Matrox.DesignAssistant.Core" Version="10.0.0" ExcludeAssets="runtime"/>
		<PackageReference Include="Matrox.MatroxImagingLibrary" Version="10.0.0"  ExcludeAssets="runtime"/>
	</ItemGroup>
	<ItemGroup>     
    <None Include="WriteDPlc.das"/>
	</ItemGroup>
	<Target Name="PostBuild" BeforeTargets="PostBuildEvent">
		<Copy SourceFiles="WriteDPlc.das" DestinationFolder="$(OutDir)\.." />
	</Target>
</Project>